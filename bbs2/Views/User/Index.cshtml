
@{
    ViewBag.Title = "Index";
}

<h2>用户登录</h2>
<body>
    <div>
        <form action="User/Dologin" method="post" onsubmit="return validate()">
            <p>用户名：<input name="uname" id="uname"/></p>
            <p>密码：<input type="password" name="upwd" id="upwd" /></p>
            <p><input type="submit" value="login" /></p>
            <h2><span style="color:red">@ViewBag.Msg</span></h2>
        </form>
    </div>
</body>

<script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
<script type="text/javascript">
    //验证用户名和密码：非空验证
    function validate() {
        var uname = $("#uname").val();
        var upwd = $("#upwd").val();
        if (uname == "" || upwd == "") {
            alert("用户名或密码不能为空");
            return false;
        }
        else {
            return true;//提交表单
        }
    }
</script>
